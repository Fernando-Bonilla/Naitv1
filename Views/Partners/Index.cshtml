@model IEnumerable<Naitv1.Models.Partner>  

@{
    ViewData["Title"] = "Lista de Partners";
}

<h2>Lista de Partners</h2>
<a href="@Url.Action("Create", "Partners")" class="btn btn-primary">Crear</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Logo</th>
            <th>Descripción</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var partner in Model)  
        {
            <tr>
                <td>@partner.Nombre</td>
                <td>@partner.Direccion</td>
                <td><img src="@partner.LogoUrl" alt="Logo" width="50" height="50" /></td>  
                <td>@partner.Descripcion</td>
                <td>@partner.Telefono</td>
                <td>@partner.Email</td>
                <td>@partner.Estado</td>
                <td>
                    
                    <a href="@Url.Action("Edit", "Partners", new { id = partner.Id })" class="btn btn-primary">Editar</a>
                    <a href="@Url.Action("Delete", "Partners", new { id = partner.Id })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
